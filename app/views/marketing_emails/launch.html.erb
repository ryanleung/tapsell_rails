<style type="text/css" media="screen">
	body {
		background: #fff !important;
	}
</style>

<div class="col-xs-12 no-pad">
	<header class="col-xs-12 no-pad">
		<div class="container">
			<div class="marketing-logo pull-left">
				<%= image_tag image_url("Logo_v1_orange.png") %>
			</div>

			</div>
		</div>
	</header>

	<section class="col-xs-12 main-container">
		<div class="col-xs-6 desc-tag animated slideInLeft no-pad">
			<div class="content">
				<h2 class="desc-main">Introducting the new way to</h2>
				<h2 class="desc-main">buy and sell stuff at UCSD</h2>
				<p class="desc-small">More visual, more efficient, more secure.</p>
			</div>
		</div>
		<div class="col-xs-6 image-container animated slideInRight no-pad">
			<%= image_tag image_url("tapsell-marketing-laptop.png"), class: "img-responsive"%>
		</div>
	</section>

	<section class="specific-content col-xs-12 animated slideInTop" style="background-image: url('<%= image_url("tapsell-food-marketing.png") %>')">
		<div class="col-xs-6">
			<div class="content">
				<div class="col-xs-12 no-pad">
					<%= image_tag image_url("tapsell-bbq-logo.png"), class: "img-responsive pull-right" %>
				</div>
				<h2 class="desc-main">In celebration of our launch</h2>
				<h2 class="desc-main">into UCSD, we're treating you</h2>
				<h2 class="desc-main">all to free Phil's BBQ</h2>
				<br>
				<h2 class="desc-main">Pretty sweet.</h2>
			</div>
		</div>
		<div class="col-xs-6">
			<div class="content">
				<div class="col-xs-9 form-container">
					<%= form_tag marketing_email_path, :method => :post, class: "center-block" do %>
						<h2 class="title text-center">join us for our launch event</h2>
						<h2 class="subtitle text-left">TUESDAY, MAY 27 <sup>th</sup></h2>
						<h2 class="subtitle text-left">@ library walk</h2>
						<h2 class="subtitle text-left">8am to 5pm</h2>
				    <div class="form-group text-center col-xs-12">
				      <%= text_field_tag :email, params[:email], class: "form-control", placeholder: "Type your email address here" %>
				    </div>
				    <div class="actions text-center col-xs-12">
				      <button type="submit" class="btn button-purple btn-lg" data-disabled="Sending ...">RSVP</button>
				    </div>
				  <% end %>
				</div>
			</div>
		</div>
	</section>

	<footer class="col-xs-12 marketing-footer">
		<div class="container">
			<div class="col-xs-6 text-left">
				<%= image_tag image_url("tapsell-love-vector.png") %>
				team @ tapsell
			</div>
			<div class="col-xs-6 text-right">
				copyright &copy; 2014 tapsell
			</div>
		</div>
	</footer>
</div>

