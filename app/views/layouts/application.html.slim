doctype html
html
  head
    title Tapsell
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => false
    = javascript_include_tag "application", "data-turbolinks-track" => false
    = javascript_include_tag "http://maps.googleapis.com/maps/api/js?sensor=false&libraries=places"
    = javascript_include_tag "jquery.geocomplete"
    = yield :javascript_contents
    = yield :stylesheet_contents
    = csrf_meta_tags
  body
    .nav.navbar-default.container-fluid.no-marg.main-navbar.bg-white role="navigation"
      .container.marg-top-0
        = link_to "javascript:void(0);", "data-toggle"=>"collapse", "data-target"=>".main-navbar-collapse", class: "navbar-toggle"
          i.glyphicon.glyphicon-home
        .navbar-header
          - if signed_in?
            = link_to user_path(@user), class: "navbar-brand title-color col-md-12 no-pad" do
              = image_tag "/assets/logo.png", class: "col-md-12 no-pad"
          - else
            = link_to root_path, class: "navbar-brand title-color col-md-12 no-pad" do
              = image_tag "/assets/logo.png", class: "col-md-12 no-pad"
        .collapse.navbar-collapse.main-navbar-collapse.col-xs-12
          - if signed_in?
            ul.nav.navbar-nav
              li
                p.pull-left.nav-location-container
                  = image_tag "/assets/pin.png", class: "pin-image"
                  - location = current_user.location.try
                    unless location.nil?
                    p.pull-left.location-label locality
                  - if location.nil?
                    p.pull-left.location-label UC Davis
          ul.nav.navbar-nav.navbar-right.text-right.pull-right style="padding: 3px 0"
            - if signed_in?
              li.dropdown
                = link_to "javascript:void(0);", class: "navbar-dropdown-first title-color", "data-toggle"=> "dropdown", "data-target"=>"#" do
                  - if current_user.avatar_url.blank?
                    .navbar-avatar.img-circle style= "background-image: url('assets/no_image.png')"
                  - else
                    .navbar-avatar.img-circle style= "background-image: url('#{current_user.avatar.url}')"
                  p.pull-left= current_user.first_name
                  span.cus-caret
                ul.dropdown-menu role="menu" aria-labelledby="dlabel"
                  li
                    = link_to "Post Listing", new_listing_path
                  li
                    = link_to "Profile", user_path(@user)
                  li
                    = link_to "Payment Settings", payment_settings_path(@user)
                  li
                    = link_to "Get the iPhone app", "javascript:void(0);"
                  li
                    = link_to "Log Out", '/sign-out', method: :delete
            - else
              li
                = link_to "LOG IN", "/sign-in", class: "sign-in"
              li
                = link_to "SIGN UP", "/sign-up", class: "sign-up"
    = yield
