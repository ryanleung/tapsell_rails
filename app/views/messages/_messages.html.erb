<% if @current_msg_chain.present? %>
  <%- for @message in @current_msg_chain.messages.sort_by(&:created_at) %>
    <div class="col-xs-12" style="overflow">
      <% if @current_user == @message.sender %>
        <div class="message-item col-xs-12 col-md-9 buyer pull-right">
            <span>
              <%= image_tag "tapsell_arrow_right.png" %>
            </span>
          <p>
            <%= @message.content %>
          </p>
        </div>
      <% else %>
        <div class="message-item col-xs-12 col-md-9 seller">
          <span>
            <%= image_tag "tapsell_arrow_left.png" %>
          </span>
          <p>
            <%= @message.content %>
          </p>
        </div>
      <% end %>
      <div class="col-xs-12 col-md-9 pull-left no-pad">
        <p class="text-right time"><%= distance_of_time_in_words(Time.now, @message.created_at, false, { vague: true }) %></p>
      </div>
    </div>
  <% end %>
<% end %>