<%= content_for :javascript_contents do %>
	<%= javascript_include_tag "messages" %>
<% end %>
<%= content_for :stylesheet_contents do %>
	<%= stylesheet_link_tag "messages" %>
<% end %>
<div class="col-xs-12 message-container no-pad">
	<div class="message-header col-xs-12 text-center">
		<div class="center-block">
			<%= image_tag "tapsell_sun.png", class: "pull-left" %>
			<h1 class="pull-left">
			75
			<sup>o</sup>
			F and sunny in San Francisco!
			</h1>
		</div>
	</div><!-- end of message-header -->

	<div class="message-body col-xs-12">
		<div class="container">
			<div class="message-box col-xs-12 no-pad">
				<div class="message-heading col-xs-12">
					<div class="col-xs-4 left-heading">
						<ul class="col-xs-12 list-inline">
							<li class="list-inline-item">View:</li>
							<li class="list-inline-item">
								<%= link_to "All", "javascript:void(0);" %>
							</li>
							<li class="list-inline-item">
								<%= link_to "New", "javascript:void(0);" %>
							</li>
							<li class="list-inline-item">
								<%= link_to "All", "javascript:void(0);", class: "no-dash" %>
							</li>
						</ul>
						<form role="form" class="col-xs-12">
							<div class="form-group">
								<div class="input-group">
								  <span class="input-group-addon">
								  	<i class="glyphicon glyphicon-search"></i>
								  </span>
								  <input type="text" class="form-control" placeholder="Search Message ">
								</div>
							</div>
						</form>
					</div><!-- end of left-heading -->

					<div class="col-xs-8 right-heading" id="message-header">
						<%= render "message_header" %>
					</div><!-- end of right-heading -->
				</div><!-- end of message-heading -->

				<div class="message-content col-xs-12 no-pad">
					<div class="message-content-left col-xs-4 no-pad" id="message-chains-container">
						<%= render "msg_chains" %>
					</div><!-- end of content-left -->
					<div class="message-content-right col-xs-8">
						<div class="col-xs-12 message-item-container" id="message-item-container">
							<%= render "messages" %>
						</div>
						<div class="message-input-container col-xs-12">
							<%= form_tag messages_path, :method => :post do %>
								<div class="col-xs-12 message-input-content">
									<div class="col-xs-10 no-pad">
										<textarea class="col-xs-12" name="content" placeholder="Type and hit enter to reply"></textarea>
									</div>
									<div class="pull-right">
										<%= image_tag "no_image.png", class: "avatar img-responsive img-circle" %>
									</div>
								</div>
								<div class="col-xs-12 no-pad text-right btn send-btn">
									<% if @msg_chain.present? %>
										<%= hidden_field_tag :listing_id, @msg_chain.listing_id %>
										<%= hidden_field_tag :msg_chain_id, @msg_chain.id %>
									<% end %>
									<%= submit_tag "Submit Message" %>
								</div>
							<% end %>
						</div>
					</div>
				</div><!-- end of message-content -->

			</div>
		</div>
	</div><!-- end of message-body -->
</div>