<%= content_for :javascript_contents do %>
	<%= javascript_include_tag "messages" %>
<% end %>
<%= content_for :stylesheet_contents do %>
	<%= stylesheet_link_tag "messages" %>
<% end %>
<div class="col-xs-12 message-container no-pad">
	<div class="message-header col-xs-12 text-center">
		<div class="center-block">
			<h1 class="no-marg text-center">
				<%= image_tag image_url("tapsell_sun.png"), class: "", style: "margin-top: -9px;" %>
				75<sup>o</sup>F and Sunny in San Francisco
			<%#= @greeting %>
			</h1>
		</div>
	</div><!-- end of message-header -->

	<%= render "layouts/navigation" %>
	<div class="message-body col-xs-12" style="padding-top: 0;">
		<div class="container">
			<div class="message-box col-xs-12 no-pad">
				<div class="message-heading col-xs-12">
					<div class="col-xs-5 left-heading">
						<ul class="list-inline col-xs-12">
							<li class="list-inline-item"><b>View</b></li>
							<li class="list-inline-item">
								<%= link_to "All", "javascript:void(0);" %>
							</li>
							<li class="list-inline-item">
								<%= link_to "Unread", "javascript:void(0);" %>
							</li>
							<li class="list-inline-item">
								<%= link_to "Pending", "javascript:void(0);", class: "no-dash" %>
							</li>
						</ul>
						<form role="form" class="col-xs-12" style="width: 99%; padding-left: 0;">
							<div class="form-group" style="margin-bottom: 0;">
								<div class="input-group search-input-group">
								  <span class="input-group-addon">
								  	<%= image_tag image_url("tapsell-search.png") %>
								  </span>
								  <input type="text" class="form-control input-lg" placeholder="Search Message">
								</div>
							</div>
						</form>
					</div><!-- end of left-heading -->

					<%#= render "message_header_accept_decline" %>
					<%#= render "message_header_accept" %>
					<%#= render "message_header_decline" %>
					<%#= render "message_header_success_buyer" %>
					<%= render "message_header_success_seller" %>
					
				</div><!-- end of message-heading -->

				<div class="message-content col-xs-12 no-pad">
					<div class="message-content-left col-xs-5 no-pad" id="message-chains-container">
						<%= render "msg_chains" %>
					</div><!-- end of content-left -->
					<div class="message-content-right col-xs-7">
						<div class="col-xs-12 message-item-container" id="message-item-container">
							<%= render "messages" %>
						</div>
						<div class="message-input-container col-xs-12" id="message-create-container">
							<%= render "message_create" %>
						</div>
					</div>
				</div><!-- end of message-content -->

			</div>
		</div>
	</div><!-- end of message-body -->
</div>