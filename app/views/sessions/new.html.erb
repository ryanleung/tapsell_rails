<% provide(:title, "Sign In") %>
<%= content_for :stylesheet_contents do %>
  <%= stylesheet_link_tag "sessions" %>
<% end %>
<div class="col-xs-12">
  <div class="container">
    <div class="title-container">
      <h1 class="login-title text-center">Hey there, welcome back!</h1>
            <h2 class="login-subtitle text-center">Enter your info below to log in. </h2>

    <div class="registration-container center-block">
      <%= form_for(:session, url: sessions_path, html: {class: "col-xs-12", role: "form"}) do |f| %>
        <div class="form-group">
          <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, class: "form-control password-input", placeholder: "Password" %>
        </div>

        <div class="form-group text-center">
          <%= f.submit "LOG IN", class: "btn btn-large btn-primary" %>
        </div>

        <div class="col-xs-12 shared-container">
          <%# Get rid of hardcoding later %>
          <div class="col-xs-6 text-left no-pad">
            New user? <%= link_to "Sign up now!", '/sign-up' %>
          </div>
          <div class="col-xs-6 text-right no-pad">
            <%= link_to "Forgot your password?", new_password_reset_path %>
          </div>
        </div>

      <% end %>

    </div>

  </div>

</div>