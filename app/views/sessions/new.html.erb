<% provide(:title, "Sign In") %>
<%= content_for :stylesheet_contents do %>
  <%= stylesheet_link_tag "sessions" %>
<% end %>
<div class="col-xs-12">
  <div class="container">
    <div class="registration-container center-block">

      <%= form_for(:session, url: sessions_path, html: {class: "col-xs-12", role: "form"}) do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control password-input" %>
        </div>

        <div class="form-group">
          <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
        </div>

        <div class="col-xs-12 shared-container">
          <%# Get rid of hardcoding later %>
          <div class="col-xs-6 text-left no-pad">
            New user? <%= link_to "Sign up now!", '/sign-up' %>
          </div>
          <div class="col-xs-6 text-right no-pad">
            <%= link_to "Forgot your password?", new_password_reset_path %>
          </div>
        </div>

      <% end %>

    </div>

  </div>

</div>