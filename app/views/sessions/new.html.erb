<% provide(:title, "Sign In") %>

<div class="row">
  <div class="span6 offset3">
      <div class="span6 offset3" align=left style="padding: 140px 30% 40px 30%;">

    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>
      <br><br>

      <%= f.label :password %>
      <%= f.password_field :password %>
      <br><br>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
      <br><br>
    <% end %>

<%# Get rid of hardcoding later %>
    <table width="100%">
      <tr>
    <td align="left">New user? <%= link_to "Sign up now!", '/sign-up' %></td>
    <td align="right"><%= link_to "Forgot your password?", new_password_reset_path %></td>
  </tr>
</table>
  </div>
</div>